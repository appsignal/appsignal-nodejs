{
  "name": "appsignal-nodejs",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index",
  "license": "MIT",
  "engines": {
    "node": ">= 10"
  },
  "dependencies": {},
  "devDependencies": {
    "@appsignal/types": "^2.0.2",
    "@koa/router": "^10.0.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/koa": "^2.11.6",
    "@types/koa__router": "^8.0.3",
    "@types/node": "^14.14.14",
    "@types/pg": "^7.14.7",
    "@types/redis": "^2.8.28",
    "@types/semver": "^7.3.4",
    "@types/shimmer": "^1.0.1",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "koa": "^2.13.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "next": "^10.1.3",
    "npm-run-all": "^4.1.5",
    "pg": "^8.5.1",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "redis": "^3.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "build": "lerna run --stream --concurrency 1 --sort build",
    "build:watch": "lerna run build:watch --stream --no-sort --concurrency 9999",
    "build:ext": "lerna run --stream --scope=@appsignal/nodejs-ext build:ext",
    "clean": "lerna run --stream clean",
    "link:npm": "lerna run --stream --concurrency 1 link:npm",
    "link:yarn": "lerna run --stream --concurrency 1 link:yarn",
    "test": "lerna run --stream --concurrency 1 --sort test",
    "prepublishOnly": "npm run clean && npm run build && lerna link"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "10.22.1",
    "npm": "6.14.9"
  }
}
