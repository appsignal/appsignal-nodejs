{
  "name": "appsignal-nodejs",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index",
  "license": "MIT",
  "engines": {
    "node": ">= 10"
  },
  "devDependencies": {
    "@appsignal/types": "^1.0.0",
    "@types/express": "^4.17.4",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@types/pg": "^7.14.3",
    "@types/semver": "^7.1.0",
    "@types/shimmer": "^1.0.1",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.2",
    "next": "^9.3.6",
    "npm-run-all": "^4.1.5",
    "pg": "^8.0.3",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "build": "lerna run --stream --concurrency 1 --sort build",
    "build:watch": "lerna run build:watch --stream --no-sort --concurrency 9999",
    "build:ext": "lerna run --stream --scope=@appsignal/nodejs-ext build:ext",
    "clean": "lerna run --stream clean",
    "link:npm": "lerna run --stream --concurrency 1 link:npm",
    "link:yarn": "lerna run --stream --concurrency 1 link:yarn",
    "test": "lerna run --stream --concurrency 1 --sort test",
    "prepublishOnly": "yarn clean && yarn build && lerna link"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write"
    ]
  },
  "dependencies": {}
}
